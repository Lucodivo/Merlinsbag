<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainMenuFragment">
    <fragment
        android:id="@+id/addArticleFragment"
        android:name="com.inasweaterpoorlyknit.inknit.ui.AddArticleFragment"
        android:label="AddArticleFragment">
        <argument
            android:name="uri"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="com.inasweaterpoorlyknit.inknit.ui.ArticleDetailFragment"
        android:label="ArticleDetailFragment">
        <argument
            android:name="clothingArticleId"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.inasweaterpoorlyknit.inknit.ui.MainMenuFragment"
        android:label="MainMenuFragment">
        <action
            android:id="@+id/action_mainMenuFragment_to_addArticleFragment"
            app:destination="@id/addArticleFragment">
            <argument
                android:name="uri"
                app:argType="string"
                app:nullable="true" />
        </action>
        <action
            android:id="@+id/action_mainMenuFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_mainMenuFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
            <argument
                android:name="clothingArticleId"
                app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.inasweaterpoorlyknit.inknit.ui.CameraFragment"
        android:label="CameraFragment" >
        <action
            android:id="@+id/action_cameraFragment_to_addArticleFragment"
            app:destination="@id/addArticleFragment">
            <argument
                android:name="uri"
                app:argType="string"
                app:nullable="true" />
        </action>
    </fragment>
</navigation>